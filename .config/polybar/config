[bar/skarphet]
override-redirect = true
bottom = true
fixed-center = true
radius = 10
line-size = 3
locale = en_US.UTF-8
wm-restack = bspwm
monitor = DP1-3
monitor-fallback = eDP-1
monitor-strict = true
